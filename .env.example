# D&D 5E AI Campaign Manager - Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# AI Provider Configuration
# =============================================================================

# Google Gemini API Key (required if using Gemini as default provider)
DND_MANAGER_GEMINI_API_KEY=your-gemini-api-key-here

# OpenAI API Key (required if using OpenAI as default provider)
DND_MANAGER_OPENAI_API_KEY=your-openai-api-key-here

# Default AI provider: 'gemini' or 'openai'
DND_MANAGER_DEFAULT_PROVIDER=gemini

# AI Model Configuration
DND_MANAGER_GEMINI_MODEL=gemini-2.0-flash-exp
DND_MANAGER_OPENAI_MODEL=gpt-4o

# =============================================================================
# Application Configuration
# =============================================================================

# Debug mode (true/false)
DND_MANAGER_DEBUG=false

# Logging level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
DND_MANAGER_LOG_LEVEL=INFO

# =============================================================================
# Storage Configuration
# =============================================================================

# Path to scene storage directory
DND_MANAGER_SCENE_STORAGE_PATH=data/scenes

# Path to asset storage directory
DND_MANAGER_ASSET_PATH=data/assets

# Path to cache directory
DND_MANAGER_CACHE_PATH=data/cache

# =============================================================================
# Vector Store Configuration
# =============================================================================

# Vector store backend: 'faiss' or 'chromadb'
DND_MANAGER_VECTOR_BACKEND=faiss

# Embedding model for RAG
DND_MANAGER_VECTOR_EMBEDDING_MODEL=text-embedding-3-small

# Text chunking settings
DND_MANAGER_VECTOR_CHUNK_SIZE=1000
DND_MANAGER_VECTOR_CHUNK_OVERLAP=200

# =============================================================================
# Game Settings
# =============================================================================

# Default ruleset: '5e' or '5e_2024'
DND_MANAGER_GAME_DEFAULT_RULESET=5e

# Auto-roll for NPCs
DND_MANAGER_GAME_AUTO_ROLL_NPC=true

# Initiative mode: 'standard', 'group', or 'side'
DND_MANAGER_GAME_INITIATIVE_MODE=standard

# Critical hit rule: 'double_dice', 'double_damage', or 'max_plus_roll'
DND_MANAGER_GAME_CRITICAL_HIT_RULE=double_dice

# =============================================================================
# UI Settings
# =============================================================================

# UI theme: 'light', 'dark', or 'auto'
DND_MANAGER_UI_THEME=dark

# Enable development mode features
DND_MANAGER_UI_ENABLE_DEV_MODE=false
